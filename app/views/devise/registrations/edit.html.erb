<h2 class="header">Edit Detail</h2>
<div class="customizecontainer">
  <p class="alert" style="color:red"><%= notice %></p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field inputs">
      <%= f.text_field :email, :disabled => true, autocomplete: "email" %>
    </div>

    <div class="field inputs">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name, autofocus: true, :required => true %>
    </div>

    <div class="field inputs">
      <%= f.label :cid %><br />
      <%= f.text_field :cid, :required => true %>
    </div>

    <div class="field inputs">
      <%= f.label :present_address %><br />
      <%= f.text_field :present_address, :required => true %>
    </div>
    <div class="field inputs">
      <%= f.label :phonenumber %><br />
      <%= f.text_field :phonenumber, :required => true %>
    </div>

    <div class="field inputs">
      <%= f.label :facility_name %><br />
      <%= f.text_field :facility_name, :required => true %>
    </div>
    
    <div class="actions inputs">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>
